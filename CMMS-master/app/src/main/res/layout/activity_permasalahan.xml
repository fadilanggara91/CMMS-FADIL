<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    tools:context=".Permasalahan">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="198dp">

        <TextView
            android:id="@+id/permasalahan"
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:text="Permasalahan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="190dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:id="@+id/nomesin"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="15dp"
                        android:text="No. Mesin"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text=" :"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvNoMesin"
                        android:text=" - "
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/site"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="15dp"
                        android:text="Site"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text=" :"
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSite"
                        android:text=" - "
                        android:textSize="16sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bglistremminder"
        android:paddingTop="22dp"
        android:paddingBottom="22dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tambahpermasalahan"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Masalah"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etPermasalahan"
                android:inputType="text"
                android:background="@drawable/bg_it_permasalahan"
                android:hint=" Masukkan permasalahan"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tambahpermasalahan1"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Tanggal"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etTanggal"
                android:inputType="datetime"
                android:background="@drawable/bg_it_permasalahan"
                android:hint=" Pilih Tanggal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tambahpermasalahan2"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Jam"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etJam"
                android:inputType="time"
                android:background="@drawable/bg_it_permasalahan"
                android:hint=" Pilih Jam"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tambahpermasalahan3"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:text="Shift"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etShift"
                android:inputType="text"
                android:background="@drawable/bg_it_permasalahan"
                android:hint=" Masukkan Shift"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Simpan Data"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/bg_et_permasalahan"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/cancel_masalah"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Cancel"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:background="@drawable/bg_et_permasalahan"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="18sp"/>


    </LinearLayout>

</LinearLayout>